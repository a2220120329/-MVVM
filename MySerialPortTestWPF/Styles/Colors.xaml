<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MySerialPortTestWPF.Styles">
    <Style TargetType="{x:Type Control}" x:Key="BaseForeground">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!--Buttons-->
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseForeground}"/>
    <!--RadioButton-->
    <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource BaseForeground}"/>
    <!--Label-->
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseForeground}"/>
    <!--Label-->
    <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource BaseForeground}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <!--Label-->
    <Style TargetType="{x:Type GroupBox}" BasedOn="{StaticResource BaseForeground}"/>
</ResourceDictionary>